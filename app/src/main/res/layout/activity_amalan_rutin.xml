<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggradient"
    tools:context=".AmalanRutinActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appbarlay"
        app:elevation="0dp"
        android:layout_height="50dp"
        android:background="@color/bg_transparan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:id="@+id/toolbar"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/titleAtas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="Amalan Harian"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>


            </android.support.v7.widget.Toolbar>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_below="@+id/appbarlay"
        android:layout_width="match_parent"
        android:background="@drawable/shape_button"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:id="@+id/lin"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">


        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="Qiyamul Lail"
            android:textColorLink="@color/bg2" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="Sholat Subuh Jamaah"
            android:textColorLink="@color/bg2" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_weight="1"
            android:text="Sholat Dhuha"
            android:textColorLink="@color/bg2" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_weight="1"
            android:text="Sholat Isya' Jamaah"
            android:textColorLink="@color/bg2" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_weight="1"
            android:text="Shodaqoh"
            android:textColorLink="@color/bg2" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_weight="1"
            android:text="Dzikir Pagi dan Petang"
            android:textColorLink="@color/bg2" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="RESET"
        android:id="@+id/reset"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginRight="15dp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_button"
        android:layout_below="@+id/lin"/>



</RelativeLayout>