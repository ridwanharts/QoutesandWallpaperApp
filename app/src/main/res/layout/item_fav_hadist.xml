<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:layout_margin="3dp"
    android:focusable="true"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_height="match_parent"
                android:layout_above="@+id/rv"
                android:background="@color/bg1"
                android:id="@+id/pojok">
                <TextView
                    android:layout_width="50dp"
                    android:id="@+id/fav_tvNomor"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/bg1"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:text="20"/>

                <TextView
                    android:id="@+id/fav_hadist_ter_dari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:layout_toRightOf="@+id/fav_tvNomor"
                    android:layout_toLeftOf="@id/fav_tvView"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:textAlignment="textStart" />

                <ImageView
                    android:layout_width="50dp"
                    android:id="@+id/fav_tvView"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/bg1"
                    android:src="@drawable/ic_right"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/sub_bg"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/fav_txt_view_judul_hadist"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="Category"
                    android:textAllCaps="true"
                    android:visibility="visible"
                    android:textAlignment="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000000" />

            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:background="@color/bg1"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:id="@+id/fav_noHadist"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Nomor Hadist"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true">

                <!-- TODO: invisible -->
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="invisible"
                    android:padding="1dp"
                    android:id="@+id/fav_copy_button_hadist"
                    android:background="@drawable/ic_copy"/>

                <CheckBox
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/fav_fav_button_hadist"
                    android:button="@drawable/custom_checkbox"/>

                <!-- TODO: invisible -->
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="30dp"
                    android:padding="1dp"
                    android:visibility="invisible"
                    android:id="@+id/fav_share_button_hadist"
                    android:background="@drawable/ic_share2"/>
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>