<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="3dp"
    android:focusable="true"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/bg1"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_imagevcathadist"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/sub_bg1"

            android:baseline="?attr/dialogCornerRadius"
            android:scaleType="fitXY" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:id="@+id/txt_view_cat_hadist"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="Category Hadist"
            android:textColor="#FFF"
            android:layout_toLeftOf="@+id/arrow"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            />
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/arrow"
            android:layout_below="@+id/iv_imagevcathadist"
            android:layout_height="match_parent"
            android:src="@drawable/ic_right"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>